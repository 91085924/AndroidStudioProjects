<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.palmdigital.simplecalc_v03.MainActivity">

    <TextView
        android:id="@+id/tv_Num1Display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textSize="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_0_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/number_0_blue_32x32" />

        <ImageView
            android:id="@+id/imageView_1_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/number_1_blue_32x32" />

        <ImageView
            android:id="@+id/imageView_2_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/number_2_blue_32x32" />

        <ImageView
            android:id="@+id/imageView_3_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/number_3_blue_32x32" />

        <ImageView
            android:id="@+id/imageView_4_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/number_4_blue_32x32" />

        <ImageView
            android:id="@+id/imageView_5_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/number_5_blue_32x32" />

        <ImageView
            android:id="@+id/imageView_6_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/number_6_blue_32x32" />

        <ImageView
            android:id="@+id/imageView_7_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/number_7_blue_32x32" />

        <ImageView
            android:id="@+id/imageView_8_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/number_8_blue_32x32" />

        <ImageView
            android:id="@+id/imageView_9_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/number_9_blue_32x32" />


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_Plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/plus_48x48" />

        <ImageView
            android:id="@+id/imageView_Minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/minus_48x48" />

        <ImageView
            android:id="@+id/imageView_Mult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/multiply_48x48" />

        <ImageView
            android:id="@+id/imageView_Div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/divide_48x48" />

        <ImageView
            android:id="@+id/imageView_Expo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/exponentiation_48x48" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvNum2Display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textSize="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_0_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/number_0_blue_32x32" />

        <ImageView
            android:id="@+id/imageView_1_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/number_1_blue_32x32" />

        <ImageView
            android:id="@+id/imageView_2_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/number_2_blue_32x32" />

        <ImageView
            android:id="@+id/imageView_3_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/number_3_blue_32x32" />

        <ImageView
            android:id="@+id/imageView_4_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/number_4_blue_32x32" />

        <ImageView
            android:id="@+id/imageView_5_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/number_5_blue_32x32" />

        <ImageView
            android:id="@+id/imageView_6_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/number_6_blue_32x32" />

        <ImageView
            android:id="@+id/imageView_7_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/number_7_blue_32x32" />

        <ImageView
            android:id="@+id/imageView_8_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/number_8_blue_32x32" />

        <ImageView
            android:id="@+id/imageView_9_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/number_9_blue_32x32" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_Equals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/equal_6464" />

    <TextView
        android:id="@+id/tv_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="80dp" />

</LinearLayout>
